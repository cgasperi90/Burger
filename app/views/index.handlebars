<div class="container">
    <h1>Eat-Da-<i class="fas fa-hamburger"></i></h1>
    <hr>

    <h2>Burgers that have not been devoured!</h2>

    <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
            <li class="list-group-item">
                <p>{{this.id}}. <span><strong>{{this.burger_name}}</strong></span></p>
                <button data-id={{this.id}} type="button" class="devour-btn btn btn-link">Devour It!</button>
            </li>
        {{/unless}}
        {{/each}}
    </ul><hr>

    <h2>Burgers that have been devoured!</h2>

    <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
            <li class="list-group-item">
                <p>{{this.id}}. <span><strong>{{this.burger_name}}</strong></span></p>
            </li>
        {{/if}}
        {{/each}}
    </ul><hr>

    <form class="create-form">

        <div class="form-group">
            <label for="auth">Add a Burger: </label>
            <input type="text" id="burger" name="burger">
        </div>
        <button type="submit">Add!</button>
    </form>
</div>